{
  "name": "@grande-armee/pocket-common",
  "version": "1.7.0",
  "description": "Pocket common libraries",
  "author": "Grande Armee",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:dev": "tsc -w",
    "prepare": "husky install",
    "format": "prettier",
    "format:fix": "npm run format -- --write",
    "format:project": "npm run format -- \"src/**/*.ts\"",
    "format:project:fix": "npm run format:project -- --write",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:project": "npm run lint -- \"src/**/*.ts\"",
    "lint:project:fix": "npm run lint:project -- --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "npm run test --config tests-unit.config.js",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:unit:cov": "npm run test:unit -- --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.3",
    "@nestjs/core": "^8.2.3",
    "@nestjs/microservices": "^8.2.3",
    "class-transformer": "^0.5.1",
    "cls-hooked": "^4.2.2",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.0.0",
    "joi": "^17.4.2",
    "pino": "^7.4.1",
    "pino-pretty": "^7.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@grande-armee/pocket-style-guide": "^2.1.0",
    "@nestjs/cli": "^8.1.5",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.3",
    "@types/cls-hooked": "^4.3.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2"
  }
}
